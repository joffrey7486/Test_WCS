<p id="notice"><%= notice %></p>

<p>
  <strong class="display-3"></p><%= @quote.content %></strong>
  <p class="text-muted"><%= @quote.user.first_name %> <%= @quote.user.last_name %></p>
</p>
<div class="d-flex">
  <% if @quote.user == current_user %>
    <%= link_to 'Edit', edit_quote_path(@quote), class:"btn btn-info m-2"  %> 
    <%= link_to 'Destroy', @quote, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger m-2"  %> 
  <% end %>
  <%= link_to 'Back', quotes_path, class:"btn btn-secondary m-2" %>
</div>